---
import { property, getPrimaryContact } from "../data/property";
import Mail from "@lucide/astro/icons/mail";
import Phone from "@lucide/astro/icons/phone";

const currentYear = new Date().getFullYear();
const primaryContact = getPrimaryContact();

const quickLinks = [
  { href: "/", label: "Home" },
  { href: "/#gallery", label: "Gallery" },
  { href: "/#amenities", label: "Amenities" },
  // { href: "/house-rules", label: "House Rules" },
  { href: "/#contact", label: "Contact" },
];
---

<footer class="bg-neutral-900 text-neutral-300">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8 lg:py-16">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
      <!-- Brand & Description -->
      <div class="lg:col-span-2">
        <h2 class="text-xl font-semibold text-white">{property.name}</h2>
        <p class="mt-3 max-w-md text-sm leading-relaxed text-neutral-400">
          {property.shortDescription}
        </p>
        <div class="mt-4 space-y-2">
          <a
            href={`mailto:${primaryContact.email}`}
            class="flex items-center gap-2 text-sm text-neutral-400 transition-colors hover:text-white"
          >
            <Mail class="h-4 w-4" />
            {primaryContact.email}
          </a>
          <a
            href={`tel:${primaryContact.phone.replace(/\s/g, "")}`}
            class="flex items-center gap-2 text-sm text-neutral-400 transition-colors hover:text-white"
          >
            <Phone class="h-4 w-4" />
            {primaryContact.phone}
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-white">
          Quick Links
        </h3>
        <ul class="mt-4 space-y-2">
          {
            quickLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-neutral-400 transition-colors hover:text-white"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Location -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-white">
          Location
        </h3>
        <address class="mt-4 not-italic">
          <p class="text-sm text-neutral-400">
            {property.location.address.city}, {property.location.address.region}
          </p>
          <p class="text-sm text-neutral-400">
            {property.location.address.country}
          </p>
        </address>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 border-t border-neutral-800 pt-8">
      <div class="flex flex-col items-center justify-between gap-4 sm:flex-row">
        <p class="text-sm text-neutral-500">
          &copy; {currentYear}
          {property.company.name}. All rights reserved.
        </p>
        <p class="text-sm text-neutral-500">
          Registration: {property.identifier}
        </p>
      </div>
    </div>
  </div>
</footer>
